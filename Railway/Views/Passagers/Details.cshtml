@using Railway.Core.Entities;
@model Railway.Core.Entities.Passager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Passager</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telephone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cotisation)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Cotisation)
            {
                <text>Cotisation payée</text>
            }
            else
            {
                <text>Cotisation non payée</text>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListReservation)
        </dt>
        <dd class="col-sm-10">
            @foreach (Reservation reservation in Model.ListReservation)
            {
                <p>@reservation.Exemplaire.Buillet.Titre @reservation.Exemplaire.NumeroInventaire</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
